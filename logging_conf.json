{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "json": {
      "format": "%(message)s"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "logs/inventory.log",
      "when": "midnight",
      "backupCount": 7,
      "encoding": "utf-8"
    },
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "json",
      "stream": "ext://sys.stdout"
    }
  },
  "loggers": {
    "inventory": {
      "level": "INFO",
      "handlers": [
        "file",
        "console"
      ],
      "propagate": false
    }
  }
}